##
## NAG f95 compiler version 4.2 (Intel/Linux)
##

F90 = f95
F90FLAGS = -O $(DEFINES) $(INC)
#F90FLAGS = $(DEFINES) $(INC)

DEFINES= -DNDEBUG -DSUPPORTS_TR15581
INC= -I ../src

CLEANFILES = *.o *.mod *.g90

.SUFFIXES: .f90 .F90
.F90.o:
	$(F90) $(F90FLAGS) -c $<
.f90.o:
	$(F90) $(F90FLAGS) -c $<
.f90:
	$(F90) $(F90FLAGS) $(LDFLAGS) $< -o $@

%.o : %.mod
